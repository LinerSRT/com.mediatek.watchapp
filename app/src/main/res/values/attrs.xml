<resources>
	
    <attr name="borderRadiusCustom" format="dimension" />  
    <attr name="type">  
        <enum name="circle" value="0" />  
        <enum name="round" value="1" />  
    </attr>  
    <declare-styleable name="RoundImageView">  
        <attr name="borderRadiusCustom" />  
        <attr name="type" />  
    </declare-styleable>  
    
     <declare-styleable name="CustomClock">
        <attr name="dial" format="reference"/>
        <attr name="hand_hour" format="reference"/>
        <attr name="hand_minute" format="reference"/>
        <attr name="hand_second" format="reference"/>
        <attr name="center" format="reference"/>
        <attr name="battery" format="reference"/>
        <attr name="week" format="reference"/>
        <attr name="showweek" format="boolean"/>
        <attr name="showdate" format="boolean"/>
	 <attr name="HeartRate" format="reference"/>
	 <attr name="MyView_battery" format="reference"/>
	 
	   <attr name="hour" format="reference"/>
          <attr name="minute" format="reference"/>
           <attr name="second" format="reference"/>
           <attr name="date" format="reference"/>
            <attr name="step" format="reference"/>
             <attr name="wether" format="reference"/>
              <attr name="month" format="reference"/>
               <attr name="yuan" format="reference"/>
	       
	       
	         <attr name="mSmall01" format="reference"/>
           <attr name="mSmall02" format="reference"/>
           <attr name="mSmall03" format="reference"/>
           
            <attr name="Sun" format="reference"/>
           <attr name="mon" format="reference"/>
           <attr name="tue" format="reference"/>
           <attr name="wed" format="reference"/>
           <attr name="thu" format="reference"/>
           <attr name="fri" format="reference"/>
           <attr name="sat" format="reference"/>
	 
    </declare-styleable>

    <declare-styleable name="PageCircleIndicator">
        <attr name="ci_width" format="dimension"/>
        <attr name="ci_height" format="dimension"/>
        <attr name="ci_margin" format="dimension"/>
        <attr name="ci_animator" format="reference"/>
        <attr name="ci_animator_reverse" format="reference"/>
        <attr name="ci_drawable" format="reference"/>
        <attr name="ci_drawable_unselected" format="reference"/>
    </declare-styleable>
    <!-- XML attributes used by default_toppackage.xml -->
    <declare-styleable name="TopPackage">
        <attr name="topPackageName" format="string" />
        <attr name="topClassName" format="string" />
        <attr name="topOrder" format="integer" />
    </declare-styleable>
    
    <declare-styleable name="MovingDotView">
        <!--小点的总数-->
        <attr name="md_dot_count" format="integer"/>
        <!--中心大点的半径-->
        <attr name="md_center_dot_radius" format="dimension"/>
        <!--中心大点的资源文件-->
        <attr name="md_center_dot_back" format="reference"/>
        <!--小点的颜色-->
        <attr name="md_dot_color" format="color"/>
        <!--最大小点半径-->
        <attr name="md_dot_max_radius" format="dimension"/>
        <!--最小小点半径-->
        <attr name="md_dot_min_radius" format="dimension"/>
        <!--小圆点的最大速度(1~10)-->
        <attr name="md_dot_max_speed" format="integer"/>
        <!--小圆点的最小速度(1~10)-->
        <attr name="md_dot_min_speed" format="integer"/>
        <!--进度显示文字大小-->
        <attr name="md_text_size" format="dimension"/>
        <!--进度显示文字颜色-->
        <attr name="md_text_color" format="color"/>
        <!--加速按钮的文字颜色-->
        <attr name="md_btn_text_color" format="color"/>
        <!--动画持续的时间-->
        <attr name="md_animator_duration" format="integer"/>
    </declare-styleable> 
    
    <declare-styleable name="SpringRecyclerView">
        <attr name="srv_enableSpringEffectWhenDrag" format="boolean"/>
        <attr name="srv_enableSpringEffectWhenFling" format="boolean"/>
        <attr name="srv_releaseBackAnimDuration" format="integer"/>
        <attr name="srv_flingBackAnimDuration" format="integer"/>
    </declare-styleable>

    <!-- 图片裁剪 -->
    <declare-styleable name="CropImageView">
        <attr name="cropGuidelines">
            <enum name="off" value="0"/>
            <enum name="onTouch" value="1"/>
            <enum name="on" value="2"/>
        </attr>
        <attr name="cropScaleType">
            <enum name="fitCenter" value="0"/>
            <enum name="center" value="1"/>
            <enum name="centerCrop" value="2"/>
            <enum name="centerInside" value="3"/>
        </attr>
        <attr name="cropShape">
            <enum name="rectangle" value="0"/>
            <enum name="oval" value="1"/>
        </attr>
        <attr name="cropAutoZoomEnabled" format="boolean"/>
        <attr name="cropMaxZoom" format="integer"/>
        <attr name="cropMultiTouchEnabled" format="boolean"/>
        <attr name="cropFixAspectRatio" format="boolean"/>
        <attr name="cropAspectRatioX" format="integer"/>
        <attr name="cropAspectRatioY" format="integer"/>
        <attr name="cropInitialCropWindowPaddingRatio" format="float"/>
        <attr name="cropBorderLineThickness" format="dimension"/>
        <attr name="cropBorderLineColor" format="color"/>
        <attr name="cropBorderCornerThickness" format="dimension"/>
        <attr name="cropBorderCornerOffset" format="dimension"/>
        <attr name="cropBorderCornerLength" format="dimension"/>
        <attr name="cropBorderCornerColor" format="color"/>
        <attr name="cropGuidelinesThickness" format="dimension"/>
        <attr name="cropGuidelinesColor" format="color"/>
        <attr name="cropBackgroundColor" format="color"/>
        <attr name="cropSnapRadius" format="dimension"/>
        <attr name="cropTouchRadius" format="dimension"/>
        <attr name="cropShowCropOverlay" format="boolean"/>
        <attr name="cropShowProgressBar" format="boolean"/>
        <attr name="cropMinCropWindowWidth" format="dimension"/>
        <attr name="cropMinCropWindowHeight" format="dimension"/>
        <attr name="cropMinCropResultWidthPX" format="float"/>
        <attr name="cropMinCropResultHeightPX" format="float"/>
        <attr name="cropMaxCropResultWidthPX" format="float"/>
        <attr name="cropMaxCropResultHeightPX" format="float"/>
    </declare-styleable>
    
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <!-- {@deprecated Use civ_circlebackground_color instead.} -->
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>
</resources>
