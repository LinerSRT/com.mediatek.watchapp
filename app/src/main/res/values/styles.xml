<resources>

    <style name="AppBaseTheme" parent="@android:style/Theme.Material.NoActionBar.Fullscreen" />

    <style name="AppTheme" parent="AppBaseTheme">
    	<item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="NotificationButtonWithOutBG">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">38.0dp</item>
        <item name="android:textSize">28.0dp</item>
        <item name="android:textColor">#FF252525</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginBottom">2.0dp</item>
    </style>

    <style name="NotificationButton" parent="@style/NotificationButtonWithOutBG">
        <item name="android:layout_height">70.0dp</item>
        <item name="android:background">@drawable/notification_button</item>
    </style>

    <style name="NotificationRoundButton" parent="@style/NotificationButton">
        <item name="android:background">@drawable/notification_button_round</item>
    </style>

    <style name="NotificationEventTime">
        <item name="android:textSize">18.0dp</item>
        <item name="android:textColor">#FF56a9ea</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="chooseClockview"  parent="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
        <item name="android:windowSwipeToDismiss">false</item>
    </style>
    
    <style name="OnlineFontPreview" parent="android:style/Theme.Dialog">   
        <item name="android:windowBackground">@drawable/alert_dialog_bg4</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
	</style> 
	
    <style name="loading_large" parent="@android:style/Widget.ProgressBar.Large">>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:minWidth">160dp</item>    
        <item name="android:maxWidth">160dp</item>    
        <item name="android:minHeight">160dp</item>    
        <item name="android:maxHeight">160dp</item>  
    </style>
    
     <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner_small</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
	</style>
	
    <style name="loading_normal" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner_normal</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:minWidth">30dp</item>    
        <item name="android:maxWidth">30dp</item>    
        <item name="android:minHeight">30dp</item>    
        <item name="android:maxHeight">30dp</item> 
	</style>

    <style name="quicksettings_button_style">
        <item name="android:background">@drawable/music_key</item>
    </style>
 </resources>