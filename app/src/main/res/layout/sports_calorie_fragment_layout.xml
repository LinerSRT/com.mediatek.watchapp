<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/round_bg">

    <com.mediatek.watchapp.StepsMeterView
        android:id="@+id/steps_meter"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:indeterminate="false"
        android:max="100"
        android:padding="30dp"
        zhy:progress_reached_bar_height="15dp"
        zhy:progress_unreached_bar_height="15dp"
        zhy:progress_reached_color="#fffa3c3c"
        zhy:progress_unreached_color="#ff333333"
        />
    
    <TextView
        android:id="@+id/calorie_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="DroidSans-Bold"
        android:gravity="center"
        android:text="@string/calorie_default"
        android:textColor="#FFffffff"
        android:textSize="70.0sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calorie_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/sport_calorie_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="26.0sp"
        android:textColor="#ffffffff"
        android:text="@string/calories_unit"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/calorie_text"
        android:fontFamily="DroidSans-Bold"/>
    
    
</RelativeLayout>

