<?xml version="1.0" encoding="utf-8"?>
<com.mediatek.watchapp.online.ClockSkinOnlineListItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_lv_item"
    android:layout_width="400px"
    android:layout_height="340px"
    android:background="#ff000000">

    <ImageView
        android:id="@+id/lv_item_iv_first"
        android:layout_width="320px"
        android:layout_height="320px"
        android:layout_centerInParent="true">
    </ImageView>

    <TextView
        android:id="@+id/lv_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dip"
        android:visibility="gone"
        android:textColor="#000000">
    </TextView>

    <TextView
        android:id="@+id/lv_item_tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dip"
        android:visibility="gone"
        android:textColor="#666666">
    </TextView>

    <TextView
        android:id="@+id/lv_item_tv_size"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="20dip"
        android:textColor="#ff9b507e">
    </TextView>

    <Button
        android:id="@+id/lv_item_btn_install"
        android:layout_width="60px"
        android:layout_height="60px"
        android:padding="0dp"
        android:layout_marginBottom="40px"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/download_button"
        >
    </Button>

</com.mediatek.watchapp.online.ClockSkinOnlineListItem>